{
  "manifest_version": 3,
  "name": "SubStylist",
  "version": "0.0.0",
  "description": "Enhance your streaming experience on popular platforms by easily customize the appearance of subtitles to match your preferences and improve your viewing experience",
  "author": "chaiyo.thai123@gmail.com",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.netflix.com/watch/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "background": {
    "service_worker": "assets/service-worker.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
